html,body
  width: 100%
  height: 100%
  margin: 0
  padding: 0
.list
  display: flex
  gap: 1em
  justify-content: space-between
  align-items: stretch
.list.c-row
  flex-direction: row
.list.c-col
  flex-direction: column
.cell
  padding: 1em
  border: 1px solid #000
  flex: 1 0 0
  background: rgba(0,0,0,.1)
  position: relative
  user-select: none
.dg
  width: 0px
  height: 0px
  border: 10px solid #000
.list > .dg
  width: auto
  height: auto
.cell:not(.list) > .dg
  position: absolute
  &:first-child { left: 0; top: 0; border-color: #000 transparent transparent #000}
  &:last-child { right: 0; bottom: 0; border-color: transparent #000 #000 transparent}

